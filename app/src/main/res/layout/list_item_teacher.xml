<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="100dp"
              android:layout_margin="8dp"
              android:background="@color/colorBackground"
              android:orientation="horizontal"
              android:weightSum="4">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/image_view_teacher"
        android:layout_width="match_parent"
        android:layout_height="92dp"
        android:layout_margin="4dp"
        android:layout_weight="3"
        android:src="@drawable/placeholder_teacher"
        app:civ_border_color="@color/colorProfilePictureBorder"
        app:civ_border_width="@dimen/profile_picture_border_width"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:weightSum="2">

        <TextView
            android:id="@+id/text_view_teacher_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            tools:text="Placeholder name"/>

        <TextView
            android:id="@+id/text_view_teacher_location"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            tools:text="Placeholder location"/>

    </LinearLayout>

</LinearLayout>
