<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorFontysPrimary</item>
        <item name="colorPrimaryDark">@color/colorFontysPrimaryDark</item>
        <item name="colorAccent">@android:color/white</item>
        <item name="android:colorBackground">@color/colorFontysPrimary</item>
    </style>

    <style name="TextTitle">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="TextTitleColor" parent="TextTitle">
        <item name="android:textColor">@color/colorFontysPrimary</item>
    </style>

    <style name="HorizontalProgressBarStyle">
        <item name="custom:progress_reached_color">@color/colorFontysPrimary</item>
        <item name="custom:progress_text_color">@color/colorFontysPrimaryDark</item>
        <item name="progress_max">100</item>
    </style>

</resources>
