<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorFontysPrimary</item>
        <item name="colorPrimaryDark">@color/colorFontysPrimaryDark</item>
        <item name="colorAccent">@android:color/white</item>
        <item name="android:colorBackground">@color/colorFontysPrimary</item>
    </style>

    <style name="TextColor">
        <item name="android:textColor">@color/colorFontysPrimary</item>
    </style>

    <style name="TextTitle" parent="TextColor">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="TextLegend">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="HorizontalProgressBarStyle" parent="NumberProgressBar_Default">
        <item name="progress_reached_color">@color/colorFontysSecondary</item>
        <item name="progress_text_color">@color/colorFontysSecondary</item>
        <item name="progress_text_size">12dp</item>
        <item name="progress_reached_bar_height">2.5dp</item>
        <item name="progress_unreached_bar_height">1dp</item>
    </style>

</resources>
